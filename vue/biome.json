{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "off",
				"noAsyncPromiseExecutor": "off",
				"noAssignInExpressions": "off"
			},
			"style": {
				"noParameterAssign": "off",
				"useImportType": "off"
			},
			"complexity": {
				"noStaticOnlyClass": "off"
			}
		},
		"include": ["./src"]
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 140,
		"ignore": []
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"trailingCommas": "none",
			"semicolons": "asNeeded"
		}
	},
	"files": {
		"include": ["./src"]
	}
}
